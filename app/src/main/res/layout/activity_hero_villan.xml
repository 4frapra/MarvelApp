<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ED1D24"
    android:orientation="vertical"
    tools:context=".HVActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@drawable/hero000"
            android:text="Heroes"
            android:textSize="64dp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:onClick="openHeroesActivity"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@drawable/villains000"
            android:text="Villains"
            android:textSize="64dp"
            android:textColor="#ffffff"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:onClick="OpenVillansActivity"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@drawable/anti001"
            android:text="Anti-Heroes"
            android:textSize="64dp"
            android:textColor="#ffffff"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:onClick="OpenAntiActivity"/>

    </LinearLayout>
</ScrollView>